{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "removeComments": true,
    "downlevelIteration": true,
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strictFunctionTypes": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
          "src/components/*"
      ],
    }
  },
  "exclude": ["node_modules", "/"],
  "include": ["src", "src/**/**/*.ts", "src/common/moduls/images.d.ts", "src/common/moduls/sounds.d.ts"]
}
